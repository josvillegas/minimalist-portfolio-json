---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta
      name="description"
      content="Diseñador UI y Web con más de dos años de experiencia en el rubro a través del dictado de talleres a estudiantes de secundaria y la creación de proyectos personales tanto para dispositivos web y móvil"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="preload"
      as="image"
      href="https://raw.githubusercontent.com/josvillegas/before-push/main/resources/img/previewSEOimg/CVJosSEO.png"
    />

    <meta
      property="og:description"
      content="Diseñador UI y Web con más de dos años de experiencia en el rubro a través del dictado de talleres a estudiantes de secundaria y la creación de proyectos personales tanto para dispositivos web y móvil"
    />
    <meta property="og:url" content="https://cv-jos.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="CV - Jos Lee Villegas" />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/josvillegas/before-push/main/resources/img/previewSEOimg/CVJosSEO.png"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      Menlo,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
</style>
